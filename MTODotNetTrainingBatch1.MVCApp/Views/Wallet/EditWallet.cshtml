@using MTODotNetTrainingBatch1.MVCApp.Controllers

@model WalletModel
@{
	ViewData["Title"] = "Edit Wallet";
}

<h1>Add New Wallet User</h1>
<div class="container-fluid">
	<form method="post" action="/Wallet/Update/@Model.WalletId">
		<div class="mb-3">
			<label for="UsernameFormControl" class="form-label">User Name</label>
			<input type="text" value="@Model.WalletName" name="WalletName" class="form-control" id="UsernameFormControl">
		</div>
		<div class="mb-3">
			<label for="FullnameFormControl" class="form-label">Full Name</label>
			<input type="text" name="Username" value="@Model.Username" class="form-control" id="FullnameFormControl">
		</div>
		<div class="mb-3">
			<label for="MobileNumberFormControl" class="form-label">Mobile Number</label>
			<input type="text" name="MobileNo" value ="@Model.MobileNo" class="form-control" id="MobileNumberFormControl">
		</div>
		<div class="mb-3">
			<label for="BalanceFormControl" class="form-label">Balance</label>
			<input type="text" name="Balance" value="@Model.Balance" class="form-control" id="BalanceFormControl">
		</div>
		<div class="mb-3">
			<a href="/Wallet" class="btn btn-secondary">Cancel</a>
			<button type="submit" class="btn btn-success" id="btnUpdate">Update</button>
		</div>
	</form>
</div>

